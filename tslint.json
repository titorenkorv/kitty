{
  "extends": [
    "tslint:latest",
    "tslint-consistent-codestyle",
    "tslint-immutable",
    "tslint-microsoft-contrib",
    "tslint-react",
    "tslint-react-hooks",
    "tslint-plugin-prettier",
    "tslint-clean-code"
  ],
  "exclude": ["node_modules/**"],
  "rules": {
    "switch-default": false,
    "no-floating-promises": false,
    "binary-expression-operand-order": false,
    "no-backbone-get-set-outside-model": false,
    "no-import-side-effect": false,
    "prefer-method-signature": false,
    "max-classes-per-file": false,
    "no-null-keyword": false,
    "max-func-body-length": [false, 200],
    "function-name": false,
    "strict-boolean-expressions": false,
    "jsx-no-multiline-js": false,
    "no-unsafe-any": false,
    "newline-per-chained-call": false,
    "type-literal-delimiter": false,
    "prefer-type-cast": false,
    "member-ordering": [
      false,
      {
        "order": [
          "private-static-field",
          "private-instance-field",
          "public-static-field",
          "public-instance-field",
          "private-constructor",
          "public-constructor",
          "private-instance-method",
          "protected-instance-method",
          "public-instance-method"
        ],
        "alphabetize": false
      }
    ],
    "newline-before-return": false,
    "no-constant-condition": false,
    "no-unused-expression": false,
    "curly": false,
    "no-relative-imports": false,
    "ordered-imports": false,
    "no-shadowed-variable": false,
    "no-submodule-imports": false,
    "no-suspicious-comment": false,
    "linebreak-style": false,
    "no-implicit-dependencies": false,
    "completed-docs": false,
    "variable-name": false,
    "max-line-length": [true, 150],
    "typedef": false,
    "export-name": false,
    "no-any": false,
    "no-console": true,
    "trailing-comma": [true, { "multiline": "never", "singleline": "never" }],
    "semicolon": [true, "never"],
    "no-var-requires": true,
    "no-boolean-literal-compare": true,
    "no-var-keyword": true,
    "object-literal-shorthand": true,
    "object-literal-key-quotes": [true, "as-needed"],
    "quotemark": [true, "single", "avoid-escape", "avoid-template", "jsx-double"],
    "prefer-template": [true, "allow-single-concat"],
    "no-eval": true,
    "function-constructor": true,
    "no-parameter-reassignment": true,
    "align": false,
    "only-arrow-functions": true,
    "arrow-parens": [true, "ban-single-arg-parens"],
    "no-duplicate-imports": true,
    "triple-equals": [true, "allow-null-check"],
    "comment-format": [true, "check-space"],
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-preblock", "check-separator"],
    "no-trailing-whitespace": true,
    "radix": true,
    "min-class-cohesion": true,
    "max-func-args": [true, 3],
    "newspaper-order": false,
    "no-flag-args": true,
    "no-for-each-push": true,
    "no-feature-envy": false,
    "no-map-without-usage": true,
    "prefer-dry-conditionals": true,
    "no-commented-out-code": true,
    "jsx-alignment": false,
    "jsx-key": true,
    "jsx-no-bind": true,
    "jsx-no-lambda": true,
    "jsx-no-string-ref": true,
    "jsx-self-close": true,
    "jsx-space-before-trailing-slash": true,
    "jsx-wrap-multiline": true,
    "jsx-equals-spacing": [true, "never"],
    "jsx-curly-spacing": [true, "never"],
    "jsx-boolean-value": [true, "never"],
    "react-hooks-nesting": false,
    "import-name": false,
    "prefer-array-literal": false,
    "insecure-random": true,
    "no-for-in": true,
    "no-invalid-regexp": true,
    "no-typeof-undefined": true,
    "no-unnecessary-field-initialization": true,
    "react-this-binding-issue": true,
    "use-named-parameter": true,
    "use-simple-attributes": false,
    // "ext-curly": [true, "consistent", "braced-child"],
    "naming-convention": [
      true,
      {
        "type": "default",
        "format": "camelCase",
        "leadingUnderscore": "forbid",
        "trailingUnderscore": "forbid"
      },
      {
        "type": "variable",
        "modifiers": ["global", "const"],
        "format": ["camelCase", "PascalCase", "UPPER_CASE"]
      },
      {
        "type": "variable",
        "modifiers": ["local", "const"],
        "format": ["camelCase", "PascalCase", "UPPER_CASE"]
      },
      {
        "type": "functionVariable",
        "modifiers": ["export", "const"],
        "format": ["camelCase", "PascalCase"]
      },
      { "type": "parameter", "modifiers": "unused", "leadingUnderscore": "allow" },
      {
        "type": "member",
        "modifiers": "private",
        "leadingUnderscore": "allow"
      },
      {
        "type": "member",
        "modifiers": "protected",
        "leadingUnderscore": "allow"
      },
      {
        "type": "method",
        "filter": "^toJSON$",
        "format": null
      },
      {
        "type": "property",
        "modifiers": ["public", "static", "const"],
        "format": "UPPER_CASE"
      },
      {
        "type": "type",
        "format": "PascalCase"
      },
      {
        "type": "class",
        "modifiers": "abstract",
        "prefix": ["Base", "Abstract", "A"]
      },
      {
        "type": "interface",
        "prefix": "I"
      },
      {
        "type": "enumMember",
        "format": "PascalCase"
      }
    ],
    "no-collapsible-if": true,
    "no-unused": [true, "ignore-parameters"],
    "no-accessor-recursion": true,
    "no-else-after-return": [true, "allow-else-if"],
    "no-unnecessary-type-annotation": false,
    "no-var-before-return": [true, "allow-destructuring"],
    "parameter-properties": [true, "readonly"],
    "prefer-const-enum": true,
    "prefer-while": true,
    "readonly-keyword": false,
    "readonly-array": false,
    "no-let": [true, "ignore-local"],
    "no-array-mutation": false,
    "no-object-mutation": false,
    "no-method-signature": true,
    "no-delete": false
  }
}
